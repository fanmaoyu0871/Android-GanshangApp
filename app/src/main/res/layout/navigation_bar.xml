<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/nav_left_imageview"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:src="@drawable/back_icon"
        android:scaleType="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/nav_left_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/nav_left_imageview"
        android:layout_toRightOf="@+id/nav_left_imageview"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/nav_center_textview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/nav_right_imageview"
        android:layout_toRightOf="@+id/nav_left_imageview"
        android:gravity="center"
        android:maxWidth="300dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nav_right_imageview"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:padding="12dp"
        android:visibility="invisible"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/nav_right_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="invisible"/>
</RelativeLayout>